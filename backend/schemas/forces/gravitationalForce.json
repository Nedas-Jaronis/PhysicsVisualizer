{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Gravitational Force",
  "type": "object",
  "properties": {
    "type": { "const": "gravitational" },
    "mass": {
      "type": "number",
      "description": "Mass of the object the force is applied to (kg)"
    },
    "distance": {
      "type": "number",
      "description": "Distance between the centers of the two objects (m)"
    },
    "gravitationalConstant": {
      "type": "number",
      "default": 6.67430e-11,
      "description": "Universal gravitational constant G"
    },
    "direction": {
      "type": "string",
      "enum": ["attractive"],
      "description": "Direction of the gravitational force"
    },
    "applied_to": {
      "type": "string",
      "description": "ID of the object this force is applied to"
    },
    "other_object_id": {
      "type": "string",
      "description": "ID of the other object involved in the gravitational interaction"
    }
  },
  "required": ["type", "mass", "distance", "applied_to", "other_object_id"]
}
