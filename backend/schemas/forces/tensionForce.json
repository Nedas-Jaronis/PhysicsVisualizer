{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Tension Force",
  "type": "object",
  "properties": {
    "type": { "const": "tension" },
    "mass": { "type": "number" },
    "acceleration": { "type": "number" },
    "gravity": { "type": "number", "default": 9.8 },
    "applied_to": {
      "type": "string",
      "description": "ID of the object this force is applied to"
    },
    "source": {
      "type": "string",
      "description": "The object exerting the tension force"
    },
    "application_point": {
      "type": "object",
      "properties": {
        "x": { "type": "number", "default": 0 },
        "y": { "type": "number", "default": 0 },
        "z": { "type": "number", "default": 0 }
      },
      "description": "Local point on the object where force is applied (optional)"
    }
  },
  "required": ["type", "mass", "applied_to", "source"]
}
