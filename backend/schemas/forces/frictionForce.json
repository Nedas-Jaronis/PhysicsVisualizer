{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Frictional Force",
  "type": "object",
  "properties": {
    "type": { "const": "friction" },
    "frictionType": { "type": "string", "enum": ["static", "kinetic"] },
    "normal_force": { "type": "number" },
    "coefficient_of_friction": { "type": "number", "minimum": 0 },
    "applied_to": {
      "type": "string",
      "description": "ID of the object this force is applied to"
    },
    "application_point": {
      "type": "object",
      "properties": {
        "x": { "type": "number", "default": 0 },
        "y": { "type": "number", "default": 0 },
        "z": { "type": "number", "default": 0 }
      },
      "description": "Local point on the object where force is applied (optional)"
    }
  },
  "required": ["type", "normal_force", "coefficient_of_friction", "applied_to", "frictionType"]
}
