{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Applied Force",
  "type": "object",
  "properties": {
    "type": { "const": "applied" },
    "magnitude": { "type": "number" },
    "direction": { "type": "string", "enum": ["x", "y", "angle"] },
    "angle": { "type": "number", "description": "Only required if direction is 'angle'" },
    "applied_to": {
      "type": "string",
      "description": "ID of the object this force is applied to"
    },
    "source": {
      "type": "string",
      "description": "The object exerting the applied force"
    },
    "application_point": {
      "type": "object",
      "properties": {
        "x": { "type": "number", "default": 0 },
        "y": { "type": "number", "default": 0 },
        "z": { "type": "number", "default": 0 }
      },
      "description": "Local point on the object where force is applied (optional)"
    }
  },
  "required": ["type", "magnitude", "direction", "applied_to", "source"]
}
