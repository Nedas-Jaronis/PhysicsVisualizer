{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Net Force",
  "type": "object",
  "properties": {
    "type": { "const": "net" },
    "forces": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "magnitude": { "type": "number" },
          "angle": { "type": "number" }
        },
        "required": ["magnitude", "angle"]
      }
    },
    "applied_to": {
      "type": "string",
      "description": "ID of the object this net force is applied to"
    },
    "application_point": {
      "type": "object",
      "properties": {
        "x": { "type": "number", "default": 0 },
        "y": { "type": "number", "default": 0 },
        "z": { "type": "number", "default": 0 }
      },
      "description": "Local point on the object where force is applied (optional)"
    }
  },
  "required": ["type", "forces", "applied_to"]
}
