{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Normal Force",
  "type": "object",
  "properties": {
    "type": { "const": "normal" },
    "mass": {
      "type": "number",
      "description": "Mass of the object (kg)"
    },
    "acceleration_due_to_gravity": {
      "type": "number",
      "default": 9.8,
      "description": "Acceleration due to gravity (m/sÂ²)"
    },
    "angle_of_incline": {
      "type": "number",
      "minimum": 0,
      "maximum": 90,
      "default": 0,
      "description": "Angle of incline in degrees"
    },
    "applied_to": {
      "type": "string",
      "description": "ID of the object this force is applied to"
    },
    "magnitude": {
      "type": "number",
      "default": 0,
      "description": "Magnitude of the normal force (N)"
    },
    "direction": {
      "type": "string",
      "enum": ["up"],
      "default": "up",
      "description": "Direction of the normal force"
    },
    "application_point": {
      "type": "object",
      "properties": {
        "x": { "type": "number", "default": 0 },
        "y": { "type": "number", "default": 0 },
        "z": { "type": "number", "default": 0 }
      },
      "required": ["x", "y", "z"],
      "description": "Local point on the object where force is applied"
    }
  },
  "required": ["type", "mass", "applied_to", "magnitude", "direction", "application_point"]
}
