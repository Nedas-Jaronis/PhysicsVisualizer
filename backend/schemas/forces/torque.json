{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Torque",
  "type": "object",
  "properties": {
    "force": { "type": "number" },
    "lever_arm": { "type": "number" },
    "angle": { "type": "number", "description": "Angle between force and lever arm (degrees)" },
    "applied_to": {
      "type": "string",
      "description": "ID of the object this torque is applied to"
    },
    "application_point": {
      "type": "object",
      "properties": {
        "x": { "type": "number", "default": 0 },
        "y": { "type": "number", "default": 0 },
        "z": { "type": "number", "default": 0 }
      },
      "description": "Local point on the object where torque is applied (optional)"
    }
  },
  "required": ["force", "lever_arm", "angle", "applied_to"]
}
