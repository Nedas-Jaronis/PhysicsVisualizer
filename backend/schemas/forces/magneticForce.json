{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Magnetic Force",
  "type": "object",
  "properties": {
    "type": { "const": "magnetic" },
    "charge": { "type": "number" },
    "velocity": { 
      "type": "object",
      "properties": {
        "x": { "type": "number"},
        "y": { "type": "number"},
        "z": { "type": "number"}
      },
      "required": ["x", "y"],
      "additionalProperties": false,
      "description": "Velocity vector of the object"
  },
  "source": {
      "type": "string",
      "description": "The object exerting the magnetic force"
    },
    "magnetic_field": { "type": "number" },
    "angle": { "type": "number", "description": "Angle between velocity and magnetic field (degrees)" }
  },
  "required": ["type", "charge", "velocity", "magnetic_field", "angle", "source"]
}
