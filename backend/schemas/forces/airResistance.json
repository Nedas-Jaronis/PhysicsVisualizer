{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Air Resistance",
  "type": "object",
  "properties": {
    "type": { "const": "airResistance" },
    "drag_coefficient": { "type": "number" },
    "cross_sectional_area": { "type": "number" },
    "velocity": { 
      "type": "object",
      "properties": {
        "x": { "type": "number"},
        "y": { "type": "number"},
        "z": { "type": "number"}
      },
      "required": ["x", "y"],
      "additionalProperties": false,
      "description": "Velocity vector of the object"
  },
    "air_density": { "type": "number", "default": 1.225 },
    "applied_to": {
      "type": "string",
      "description": "ID of the object this force is applied to"
    },
    "application_point": {
      "type": "object",
      "properties": {
        "x": { "type": "number", "default": 0 },
        "y": { "type": "number", "default": 0 },
        "z": { "type": "number", "default": 0 }
      },
      "description": "Local point on the object where force is applied (optional)"
    }
  },
  "required": ["type", "drag_coefficient", "cross_sectional_area", "velocity", "applied_to"]
}
