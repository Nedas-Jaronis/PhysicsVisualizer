{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RollingMotion",
  "type": "object",
  "properties": {
    "type": { "const": "rolling_motion" },
    "objectId": { "type": "string", "description": "ID corresponding to object ID" },
    "shape": { "type": "string", "enum": ["solid_sphere", "hollow_sphere", "solid_cylinder", "hollow_cylinder", "hoop"] },
    "mass": { "type": "number", "minimum": 0 },
    "radius": { "type": "number", "minimum": 0 },
    "inclineAngle": { "type": "number", "minimum": 0, "maximum": 90 },
    "height": { "type": "number", "minimum": 0 }
  },
  "required": ["type", "objectId", "shape", "mass", "radius", "inclineAngle"]
}
