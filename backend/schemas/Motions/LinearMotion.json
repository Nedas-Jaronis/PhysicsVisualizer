{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LinearMotion",
  "type": "object",
  "properties": {
    "type": { "const": "linear"},
    "id": {
      "type": "string",
      "description": "ID corresponding to object ID"},
    "initialPosition": {
      "type": "object",
      "properties": {
        "x": { "type": "number" },
        "y": { "type": "number" },
        "z": { "type": "number" }
      },
      "required": ["x", "y", "z"]
    },
    "initialVelocity": {
      "type": "object",
      "properties": {
        "x": { "type": "number" },
        "y": { "type": "number" },
        "z": { "type": "number" }
      },
      "required": ["x", "y", "z"]
    },
    "acceleration": {
      "type": "object",
      "properties": {
        "x": { "type": "number" },
        "y": { "type": "number" },
        "z": { "type": "number" }
      },
      "required": ["x", "y", "z"]
    },
    "time": { "type": "number", "minimum": 0 }
  },
  "required": ["type", "initialPosition", "initialVelocity", "acceleration", "time"]
}
