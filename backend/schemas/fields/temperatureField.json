{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Temperature Field",
  "type": "object",
  "properties": {
    "positions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "point": {
            "type": "array",
            "items": { "type": "number" },
            "minItems": 3,
            "maxItems": 3
          },
          "temperature": { "type": "number" }
        },
        "required": ["point", "temperature"]
      }
    }
  },
  "required": ["positions"]
}
