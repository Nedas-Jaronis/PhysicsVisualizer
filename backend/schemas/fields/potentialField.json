{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Potential Field",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": ["gravitational", "electric"]
    },
    "source_strength": { "type": "number" },
    "position_source": {
      "type": "array",
      "items": { "type": "number" },
      "minItems": 3,
      "maxItems": 3
    },
    "observation_point": {
      "type": "array",
      "items": { "type": "number" },
      "minItems": 3,
      "maxItems": 3
    }
  },
  "required": ["type", "source_strength", "position_source", "observation_point"]
}
