{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Spring Force Interaction",
  "type": "object",
  "properties": {
    "type": { "const": "spring_force" },
    "objectA": { "type": "string" },
    "objectB": { "type": "string" },
    "Vertex" : {
      "type": "object",
      "properties": {
        "x": { "type": "number"},
        "y": { "type": "number"}
      },
      "description": "A vertex option if body B is not given for the connecting point."
  },
    "springConstant": {
      "type": "number",
      "minimum": 0,
      "description": "Spring constant k"
    },
    "restLength": {
      "type": "number",
      "minimum": 0,
      "description": "Rest length of the spring"
    },
    "dampingCoefficient": {
      "type": "number",
      "minimum": 0,
      "description": "Optional damping constant"
    },
    "stiffness": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Stiffness of the constraint, 1 acts like a perfectly rigid body, a stiffness of 0.05 makes a loose stretchy spring."
    }
  },
  "required": ["type", "objectA", "objectB", "springConstant", "restLength", "stiffness"],
  "additionalProperties": false
}
