{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Stress-Strain Properties",
  "type": "object",
  "properties": {
    "yield_strength": {
      "type": "number",
      "description": "Stress at which material begins to deform plastically (Pascals)",
      "minimum": 0
    },
    "ultimate_tensile_strength": {
      "type": "number",
      "description": "Maximum stress material can withstand (Pascals)",
      "minimum": 0
    },
    "elastic_limit": {
      "type": "number",
      "description": "Maximum stress for elastic deformation (Pascals)",
      "minimum": 0
    },
    "strain_hardening_exponent": {
      "type": "number",
      "description": "Exponent characterizing strain hardening (dimensionless)",
      "minimum": 0
    }
  },
  "required": ["yield_strength", "ultimate_tensile_strength"]
}
