{
  "type": "object",
  "properties": {
    "id": { "type": "string", "description": "Unique identifier" },
    "type": { "type": "string", "enum": ["circle", "polygon", "rectangle", "trapezoid", "fromvertices"], "default": "rectangle" },
    "mass": { "type": "number", "minimum": 0, "description": "Mass in kilograms" },
    "width" : {
      "type": "number",
      "minimum": 0,
      "description": "Width of the object in pixels units"
    },
    "height": {
      "type": "number",
      "minimum": 0,
      "description": "Height of the object in pixels units"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": { "type": "number" },
        "y": { "type": "number" },
        "z": { "type": "number", "default": 0 }
      },
      "required": ["x", "y"],
      "description": "Starting position"
    },
    "onCliff":{
      "type": "boolean",
      "description": "true or false whether the object is on a cliff or not."
    },
    "onIncline": {
      "type": "boolean",
      "description": "true or false whether the object is on an incline or not."
    },
    "inclinePositionRatio": {
      "type": "number",
      "minimum": 0.2,
      "maximum": 1,
      "description": "Ratio (0.2 to 1) representing the position along the incline from bottom (0.2) to top (1)",
      "default": 1
    },
    "velocity": {
      "type": "object",
      "properties": {
        "x": { "type": "number", "default": 0 },
        "y": { "type": "number", "default": 0 },
        "z": { "type": "number", "default": 0 }
      },
      "description": "Initial velocity"
    },
    "acceleration": {
      "type": "object",
      "properties": {
        "x": { "type": "number", "default": 0 },
        "y": { "type": "number", "default": 0 },
        "z": { "type": "number", "default": 0 }
      },
      "description": "Initial acceleration"
    },
    "orientation": {
      "type": "object",
      "properties": {
        "angle": { "type": "number", "default": 0 }
      },
      "description": "Orientation angle (for rigid bodies)"
    },
    "angular_velocity": {
      "type": "number",
      "default": 0,
      "description": "Angular velocity (for rigid bodies)"
    },
    "sides": {
      "type": "number",
      "description": "Number of sides of the object (for objects with many verticies)"
    },
    "radius":{
      "type": "number",
      "description": "Radius of the object, particular for circles. In pixels!"
    },
    "slope" :{
      "type": "number",
      "minimum": 0.1,
      "maximum": 1,
      "description": "Slope of the trapezoid sides. Only used for trapezoid objects."
    },
    "options": {
      "type": "object",
      "properties": {
        "isStatic": {"type": "boolean", "description": "Boolean value for whether the object is static or not, True if it does not move at all, False if it should move."},
        "friction": { "type": "number", "minimum": 0},
        "restitution": { "type": "number", "minimum": 0},
        "angle": {"type": "number"},
        "render": {
          "type": "object",
          "properties": {
            "fillStyle": {"type": "string", "description": "No dark colors, only vibrant"},
            "strokeStyle": {"type": "string", "description": "No dark colors, only vibrant"},
            "lineWidth": {"type": "number", "minimum": 0}
          }
        }
      }
    },
    "vertexSet":{
      "type": "array",
      "description": "Array of vertices for a custom polygon shape. Used with 'fromvertices' type.",
      "items": {
        "type": "object",
        "properties": {
          "x": { "type": "number"},
          "y": { "type": "number" }
        },
        "required": ["x","y"]
      }
    }
  },
  "required": ["id", "mass", "position", "options"]
}
