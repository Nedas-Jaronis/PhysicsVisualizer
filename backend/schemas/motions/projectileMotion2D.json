{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "2D Projectile Motion",
  "type": "object",
  "properties": {
    "type": { "const": "projectileMotion2D"},
    "initialPosition": {
      "type": "object",
      "properties": {
        "x": { "type": "number" },
        "y": { "type": "number" }
      },
      "required": ["x", "y"]
    },
    "initialVelocity": {
      "type": "object",
      "properties": {
        "vx": { "type": "number" },
        "vy": { "type": "number" }
      },
      "required": ["vx", "vy"]
    },
    "acceleration": {
      "type": "object",
      "properties": {
        "ax": { "type": "number", "default": 0 },
        "ay": { "type": "number" }
      },
      "required": ["ax", "ay"]
    },
    "time": { "type": "number", "minimum": 0 }
  },
  "required": ["type", "initialPosition", "initialVelocity", "acceleration", "time"],
  "additionalProperties": false
}
