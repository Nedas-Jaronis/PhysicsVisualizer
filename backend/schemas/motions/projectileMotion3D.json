{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "3D Projectile Motion",
  "type": "object",
  "properties": {
    "initialPosition": {
      "type": "object",
      "properties": {
        "x": { "type": "number" },
        "y": { "type": "number" },
        "z": { "type": "number" }
      },
      "required": ["x", "y", "z"]
    },
    "initialVelocity": {
      "type": "object",
      "properties": {
        "vx": { "type": "number" },
        "vy": { "type": "number" },
        "vz": { "type": "number" }
      },
      "required": ["vx", "vy", "vz"]
    },
    "acceleration": {
      "type": "object",
      "properties": {
        "ax": { "type": "number", "default": 0 },
        "ay": { "type": "number" },
        "az": { "type": "number", "default": 0 }
      },
      "required": ["ax", "ay", "az"]
    },
    "time": { "type": "number", "minimum": 0 }
  },
  "required": ["initialPosition", "initialVelocity", "acceleration", "time"],
  "additionalProperties": false
}
