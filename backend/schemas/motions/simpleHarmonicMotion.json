{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Simple Harmonic Motion",
  "description": "Schema describing simple harmonic motion of an object.",
  "type": "object",
  "properties": {
    "type": { "const": "simpleHarmonic"},
    "objectId": {
      "type": "string",
      "description": "Unique identifier of the oscillating object."
    },
    "amplitude": {
      "type": "number",
      "description": "Maximum displacement from equilibrium position (meters).",
      "minimum": 0
    },
    "angularFrequency": {
      "type": "number",
      "description": "Angular frequency Ï‰ in radians per second.",
      "minimum": 0
    },
    "phase": {
      "type": "number",
      "description": "Initial phase angle in radians.",
      "minimum": 0,
      "maximum": 6.2831853
    },
    "equilibriumPosition": {
      "type": "number",
      "description": "Position of equilibrium (meters).",
      "default": 0
    },
    "mass": {
      "type": "number",
      "description": "Mass of the object (kg).",
      "minimum": 0
    },
    "duration": {
      "type": "number",
      "description": "Duration to simulate the motion (seconds).",
      "minimum": 0
    }
  },
  "required": ["type", "objectId", "amplitude", "angularFrequency", "phase", "mass", "duration"],
  "additionalProperties": false
}
