{
  "type": "object",
  "properties": {
    "id": { "type": "string", "description": "Unique identifier for the incline" },
    "type": { "type": "string", "enum": ["incline"], "default": "incline" },
    "angle": {
      "type": "number",
      "minimum": 0,
      "maximum": 90,
      "description": "Angle in degrees above the horizontal"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": { "type": "number", "description": "X-coordinate of base" },
        "y": { "type": "number", "description": "Y-coordinate of base" },
        "z": { "type": "number", "default": 0 }
      },
      "required": ["x", "y"]
    },
    "length": {
      "type": "number",
      "minimum": 3,
      "maximum": 5,
      "description": "Length of the incline surface, only pick numbers 3 to 5, nothing below 3, if not stated default to 5",
      "default": 5
    },
    "width": {
      "type": "number",
      "minimum": 0,
      "description": "Width of the incline (optional for 2D physics)"
    },
    "friction": {
      "type": "object",
      "properties": {
        "static": { "type": "number", "minimum": 0, "description": "Static friction coefficient" },
        "kinetic": { "type": "number", "minimum": 0, "description": "Kinetic friction coefficient" }
      },
      "required": ["kinetic"]
    },
    "material": {
      "type": "string",
      "description": "Optional: material type of the incline surface"
    },
    "thickness":{
      "type":"number",
      "minimum": 0,
      "maximum": 0.2,
      "description": "Thickness of the incline (in meters), if not stated default to 0.2"
    },
    "leg": {
      "type": "object",
      "description": "Optional support leg for the incline",
      "properties": {
        "type": "string",
        "enum": ["left", "right"],
        "description": "Side of the incline where the leg is placed"
      },
      "thickness": {
        "type": "number",
        "minimum": 0,
        "maximum": 0.2,
        "description": "Thickness of the leg (in meters), if not stated default at 0.2"
      },
      "material": {
        "type": "string",
        "description": "Material of the leg (optional)"
      }
    },
    "required": ["side", "thickness"]
  },
  "required": ["id", "angle", "position", "length", "friction"]
}
