{
  "type": "object",
  "properties": {
    "id": { "type": "string", "description": "Unique identifier for the wall" },
    "type": { "type": "string", "enum": ["wall"], "default": "wall" },
    "position": {
      "type": "object",
      "properties": {
        "x": { "type": "number" },
        "y": { "type": "number" },
        "z": { "type": "number", "default": 0 }
      },
      "required": ["x", "y"]
    },
    "height": {
      "type": "number",
      "minimum": 0,
      "description": "Height of the wall"
    },
    "width": {
      "type": "number",
      "minimum": 0,
      "description": "Width of the wall"
    },
    "thickness": {
      "type": "number",
      "minimum": 0,
      "default": 0.5,
      "description": "Thickness of the wall"
    },
    "material": {
      "type": "string",
      "description": "Optional material type of the wall"
    },
    "isReflective": {
      "type": "boolean",
      "default": false,
      "description": "Whether the wall reflects motion (for collision response)"
    },
    "edge": {
      "type": "string", 
      "enum": ["right", "left"],
      "description": "Whether the wall is on the right edge or left edge"
    }
  },
  "required": ["id", "position", "height", "width"]
}
