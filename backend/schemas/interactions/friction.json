{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Friction Interaction",
  "type": "object",
  "properties": {
    "type": { "const": "friction" },
    "objectA": { "type": "string" },
    "objectB": { "type": "string" },
    "staticCoefficient": {
      "type": "number",
      "minimum": 0,
      "description": "Coefficient of static friction"
    },
    "kineticCoefficient": {
      "type": "number",
      "minimum": 0,
      "description": "Coefficient of kinetic friction"
    },
    "frictionDirection": {
      "type": "array",
      "items": { "type": "number" },
      "minItems": 3,
      "maxItems": 3,
      "description": "Direction vector opposite to motion"
    }
  },
  "required": ["type", "objectA", "objectB"],
  "additionalProperties": false
}
