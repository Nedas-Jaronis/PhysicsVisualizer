{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Elasticity",
  "type": "object",
  "properties": {
    "youngs_modulus": {
      "type": "number",
      "description": "Elastic modulus in Pascals",
      "minimum": 0
    },
    "poissons_ratio": {
      "type": "number",
      "minimum": 0,
      "maximum": 0.5,
      "description": "Poisson's ratio (dimensionless)"
    },
    "shear_modulus": {
      "type": "number",
      "description": "Shear modulus in Pascals",
      "minimum": 0
    },
    "bulk_modulus": {
      "type": "number",
      "description": "Bulk modulus in Pascals",
      "minimum": 0
    }
  },
  "required": ["youngs_modulus", "poissons_ratio"]
}
