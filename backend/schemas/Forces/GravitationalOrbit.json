{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GravitationalOrbit",
  "type": "object",
  "properties": {
    "type": { "const": "gravitational_orbit" },
    "planetMass": { "type": "number", "minimum": 0, "description": "Mass of the central body in kg" },
    "satelliteMass": { "type": "number", "minimum": 0, "description": "Mass of the orbiting body in kg" },
    "orbitRadius": { "type": "number", "minimum": 0, "description": "Orbital radius in meters" },
    "orbitalSpeed": { "type": "number", "minimum": 0 },
    "orbitalPeriod": { "type": "number", "minimum": 0 }
  },
  "required": ["type", "planetMass", "orbitRadius"]
}
